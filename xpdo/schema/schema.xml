        <field key="id" dbtype="integer" phptype="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <field key="first_name" dbtype="varchar" phptype="string" size="128" required="true"/>
        <field key="last_name" dbtype="varchar" phptype="string" size="128" required="true"/>
        <aggregate alias="Books" class="Books" local="id" foreign="author_id" cardinality="one" owner="foreign" />
    </object>
    <object class="Publisher" table="publisher" extends="xPDO\Om\xPDOSimpleObject">
        <field key="id" dbtype="integer" phptype="integer" required="true" primaryKey="true" autoIncrement="true" />
        <field key="name" dbtype="varchar" phptype="string" size="128" required="true" />
        <aggregate alias="Books" class="Books" local="id" foreign="publisher_id" cardinality="one" owner="foreign" />
    </object>
</model>